<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pm12016g3.tln.univ.fr.vot">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!--             *** FIRST ACTIVITY *** -->
        <!-- android:name=".features.test.TestActivity_" -->
        <activity
            android:name=".features.root.LoginActivity_"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
<!--            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>-->
        </activity>

        <!--             *** ROOT PACKAGE *** -->
        <activity
            android:name=".features.root.RegistrationActivity_"
            android:configChanges="orientation"
            android:parentActivityName=".features.root.LoginActivity_"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <!--             *** MAIN ACTIVITY *** -->
        <activity
            android:name=".features.MainActivity_"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <!--             *** NETWORK PACKAGE *** -->
        <activity
            android:name=".features.network.research.NetworkResearchActivity_"
            android:configChanges="orientation"
            android:label="@string/network_research_label"
            android:screenOrientation="portrait" />
        <activity android:name=".features.test.TestActivity" />

        <!--             *** CONSULT PACKAGE *** -->
        <activity
            android:name=".features.consult.participation.stv.ParticipationActivity_"
            android:label="@string/consult_particiation_participation_label">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".features.consult.result.ResultActivity_"
            android:label="@string/consult_result">
        </activity>

        <!--
            *** DO NOT TOUCH! ***
            Activity for testing (UI + ACTIONS)
        -->
        <activity
            android:name=".features.test.TestActivity_"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".features.consult.participation.stv.ParticipationActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
    </application>

</manifest>