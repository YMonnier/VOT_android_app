<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:id="@+id/network_research_input_research"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/network_research_action_research" />
    <ListView
        android:id="@+id/network_research_persons_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/network_research_input_research" />
</RelativeLayout>
